int index = 0,k = 0,objetivo = 0;
boolean encontrado = false;
				
objetivo = Integer.parseInt(JOptionPane.showInputDialog(null,"Ingrese el dato a buscar"));
				
	for(k = 0; k < datos.length; k++) {
					
		if(objetivo == datos[k]) {
						
				index = k;
				encontrado = true;
				break;
			}
					
	}
				
		if(encontrado) JOptionPane.showMessageDialog(null, "Se ha encontrado el valor en la posicion " + index);
		else JOptionPane.showMessageDialog(null, "No se encontro");
